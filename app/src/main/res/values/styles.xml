<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
      <!-- Customize your theme here.-->
      <item name="colorPrimary">@color/colorPrimary</item>
      <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
      <item name="colorAccent">@color/colorAccent</item>
  </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!--NAVIGATION DRAWER -->

    <!-- Nav Drawer Txt -->
    <style name="nav_drawer_txt">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Nav Drawer Title -->
    <style name="nav_drawer_title" parent="nav_drawer_txt">
        <item name="android:textSize">@dimen/nav_drawer_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Nav Drawer Name -->
    <style name="nav_drawer_name" parent="nav_drawer_txt">
        <item name="android:textSize">@dimen/nav_drawer_size_name</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!-- Nav Drawer Email -->
    <style name="nav_drawer_email" parent="nav_drawer_txt">
        <item name="android:textSize">@dimen/nav_drawer_size_email</item>
    </style>

    <style name="Go4LunchTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Go4LunchTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>